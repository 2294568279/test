page {
  background-color: #f9f9f9;
  height: 100%;
}

.login-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
  margin-bottom: 100rpx;
}

.logo image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.login-form {
  padding: 0 60rpx;
  margin-top: 100rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.wx-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.agreement {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 50rpx;
}