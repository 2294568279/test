page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  height: 100%;
}

.login-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 180rpx;
  margin-bottom: 120rpx;
}

.logo image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  text-align: center;
}

.login-form {
  padding: 0 60rpx;
  margin-top: 80rpx;
}

.login-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(45deg, #07c160, #38ef7d);
  color: #fff;
  font-size: 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.login-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 24rpx rgba(7, 193, 96, 0.4);
}

.wx-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.agreement {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  margin-top: 60rpx;
  line-height: 1.6;
}

.link {
  color: #fff;
  text-decoration: underline;
}