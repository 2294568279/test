page {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  height: 100%;
}

.profile-container {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.form {
  padding: 40rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid #e8e8e8;
}

.avatar-tip {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.form-item {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 600;
  display: block;
}

.input {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #07c160;
  background-color: #fff;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 10rpx;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(45deg, #07c160, #38ef7d);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 15rpx;
  text-align: center;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.save-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 24rpx rgba(7, 193, 96, 0.4);
}
